using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int n = 0;
            double x, y, b, L = -0.35;
            double eps;
            Console.Write("Введите приближённое значение корня x = ");
            x = Convert.ToDouble(Console.ReadLine());
            Console.Write("Введите точность eps = ");
            eps = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();

            do
            {
                y = fi(x, L);
                b = Math.Abs(x - y);
                x = y;
                n+=1;
            }
            while (b >= eps);

            Console.WriteLine("x = " + x);
            Console.WriteLine("n = " + n + "(количество итераций)");
            Console.ReadKey();
        }
        //Функция
        static double func(double x)
        {
            return Math.Asin(x) - Math.Sin(5 * x) * Math.Pow(1 - Math.Pow(x, 4), 1 / 4);
        }
        //Функция 2
        static double fi(double x, double L)
        {
            return x + L * func(x);
        }
    }
}
