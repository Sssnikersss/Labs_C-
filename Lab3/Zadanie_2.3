using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double a;
            double b;
            double c;
            double n = 0;
            double eps;
            Console.Write("Введите левый конец отрезка (a): ");
            a = Convert.ToDouble(Console.ReadLine());
            Console.Write("Введите правый конец (b): ");
            b = Convert.ToDouble(Console.ReadLine());
            Console.Write("Введите точность (eps): ");
            eps = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();

            do
            {
                c = (a + b) / 2;
                if (func(c) * func(a) <= 0)
                {
                    b = c;
                }
                else
                {
                    a = c;
                }
                n += 1;
            }
            while (Math.Abs(func(a - b)) >= eps);
            Console.WriteLine("x = " + c);
            Console.WriteLine("n = " + n + " (количество итераций)");
            Console.ReadKey();
        }
        //Функция
        static double func(double x)
        {
            return Math.Asin(x) - Math.Sin(5 * x) * Math.Pow(1 - Math.Pow(x, 4), 1 / 4);
        }
        //Функция нахождения корней
        static double find(double a, double b, double eps)
        {
            while (Math.Abs(a - b) > eps);
            {
                a = b - (b - a) * func(b) / (func(b) - func(a));
                b = a - (a - b) * func(a) / (func(a) - func(b));
            }
            return b;
        }
    }
}
