using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double x1;
            double eps;
            Console.Write("Введите точность (eps): ");
            eps = Convert.ToDouble(Console.ReadLine());
            Console.Write("Введите x1: ");
            x1 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine();
            double x = 0;
            double n = 0;

            while (Math.Abs(func(x1)) >= eps)
            {
                x = x1 - (func(x1) / funcp(x1));
                x1 = x;
                n++;
            }
            Console.WriteLine("x = " + x);
            Console.WriteLine("n = " + n);
            Console.ReadKey();
        }
        //Функция
        static double func(double x)
        {
            return Math.Asin(x) - Math.Sin(5 * x) * Math.Pow(1 - Math.Pow(x, 4), 1 / 4);
        }
        //Производная
        static double funcp(double x)
        {
            return 1 / Math.Pow(1 - Math.Pow(x, 2), 1 / 2) - 5 * Math.Pow(1 - Math.Pow(x, 4), 1 / 4) * Math.Cos(5 * x) - (Math.Pow(x, 3) * Math.Sin(5 * x) * Math.Pow(1 - Math.Pow(x, 4), 1 / 4) / (Math.Pow(x, 4) - 1));
        }
    }
}
